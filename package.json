{
  "name": "vue-component-lib",
  "version": "0.1.0",
  "private": true,
  "description": "Vue component library base template",
  "keywords": [
    "Vue",
    "component",
    "library"
  ],
  "author": "Jialiang T. (rememhe@outlook.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zousdie/vue-component-lib.git"
  },
  "bugs": {
    "url": "https://github.com/Zousdie/vue-component-lib/issues"
  },
  "homepage": "https://github.com/Zousdie/vue-component-lib#readme",
  "files": [
    "esm",
    "lib"
  ],
  "main": "lib/index.js",
  "module": "esm/index.js",
  "style": "lib/index.css",
  "sideEffects": [
    "esm/**/style/*",
    "lib/**/style/*",
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "bootstrap": "yarn || npm i",
    "lint": "eslint --fix ./packages --ext .js,.jsx,.ts,.tsx,.vue && stylelint --fix packages/**/*.scss",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "dev": "vuepress dev docs",
    "build:docs": "vuepress build docs",
    "build:entry": "node build/build-entry.js",
    "build:component-esm": "rollup -c build/rollup.script.js --environment NODE_ENV:production,TARGET:component",
    "build:component-cjs": "rollup -c build/rollup.script.js --environment NODE_ENV:production,TARGET:component,BABEL_MODULE:cjs",
    "build:library": "rollup -c build/rollup.library.js --environment NODE_ENV:production,TARGET:library",
    "build:style": "gulp --gulpfile build/gulp.style.js",
    "build:style-entry": "node build/build-style-entry.js",
    "build": "node build/build.js",
    "clean": "rm -rf esm & rm -rf lib",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "serve tests/coverage -s",
    "release": "sh ./build/release.sh",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^2.6.10"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "@vue/babel-preset-jsx": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "autoprefixer": "^9.6.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.0.2",
    "dependency-tree": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-vue": "^5.2.2",
    "fibers": "^4.0.1",
    "fs-extra": "^8.0.1",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^0.9.1",
    "gulp-postcss": "^8.0.0",
    "gulp-stylelint": "^9.0.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.2.0",
    "node-sass-package-importer": "^5.3.2",
    "postcss": "^7.0.17",
    "rollup": "^1.14.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-eslint": "^6.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "rollup-plugin-vue": "^5.0.0",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "shelljs": "^0.8.3",
    "stylelint": "^10.0.1",
    "stylelint-config-recess-order": "^2.0.2",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "typescript": "^3.5.1",
    "vue": "^2.6.10",
    "vue-jest": "^4.0.0-beta.2",
    "vue-template-compiler": "^2.6.10",
    "vuepress": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{scss,sass,css,vue}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
